@model MFPE_InsureityPortal_Client.Models.BusinessMaster

@{
    ViewData["Title"] = "CreateBusinessMaster";
}

<h1>CreateBusinessMaster</h1>

<h4>BusinessMaster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBusinessMaster">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasBusinessTypes" /> @Html.DisplayNameFor(model => model.HasBusinessTypes)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AnnualTurnover" class="control-label"></label>
                <input asp-for="AnnualTurnover" class="form-control" />
                <span asp-validation-for="AnnualTurnover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capitalInvested" class="control-label"></label>
                <input asp-for="capitalInvested" class="form-control" />
                <span asp-validation-for="capitalInvested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BussinessValue" class="control-label"></label>
                <input asp-for="BussinessValue" class="form-control" />
                <span asp-validation-for="BussinessValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @if (ViewBag.Message != null)
            {
                <p>@ViewBag.Message</p>
            }
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Go Back", "AllOperations", "Auth")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
